<?xml version="1.0" encoding="utf-8" standalone="no"?><web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<servlet>
		<servlet-name>TransactionServlet</servlet-name>
		<servlet-class>com.appspot.cloudbalance.TransactionServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PayeeServlet</servlet-name>
		<servlet-class>com.appspot.cloudbalance.PayeeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.appspot.cloudbalance.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ImportServlet</servlet-name>
		<servlet-class>com.appspot.cloudbalance.ImportServlet</servlet-class>
	</servlet>
	
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/cb/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/ng/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	
	<servlet-mapping>
		<servlet-name>TransactionServlet</servlet-name>
		<url-pattern>/cb/transaction</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PayeeServlet</servlet-name>
		<url-pattern>/cb/payee</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/cb/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ImportServlet</servlet-name>
		<url-pattern>/cb/import</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- Configure the namespace filter. -->
	<filter>
		<filter-name>NamespaceFilter</filter-name>
		<filter-class>com.appspot.cloudbalance.NamespaceFilter</filter-class>
		<init-param>
			<param-name>namespace-strategy</param-name>
			<!-- Change this to the desired strategy, see NamespaceFilter.NamespaceStrategy -->
			<param-value>GOOGLE_USER</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>NamespaceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


</web-app>